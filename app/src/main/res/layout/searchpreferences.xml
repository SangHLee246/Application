<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#645A95">

    <TextView
        android:text="@string/search_preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_preferences"
        android:layout_weight="0.00"/>

    <TextView
        android:text="@string/interested_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/interested_in"
        android:layout_weight="0.00"/>

    <EditText android:id="@+id/team_free_agent_coach_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/team_free_agent_coach_all" />

    <TextView
        android:text="@string/only_notify_me_when_matched"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/only_notify_me_when_matched"
        android:layout_weight="0.00"/>

    <EditText android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/category" />

    <Button
        android:text="@string/confirm_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_changes"
        android:onClick="main_menu"
        android:layout_weight="0.00" />
</LinearLayout>