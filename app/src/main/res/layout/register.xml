<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#645A95">

    <Space
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <Button
        android:text="@string/team"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/team"
        android:elevation="0dp"
        android:onClick="team_sign_up"
        android:textColor="@color/Pantone_Coated_2572_C"
        android:background="@drawable/background" />

    <Button
        android:text="@string/free_agent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/free_agent"
        android:elevation="0dp"
        android:onClick="free_agent_sign_up"
        android:textColor="@color/Pantone_Coated_2572_C"
        android:background="@drawable/background" />

    <Button
        android:text="@string/coach"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/coach"
        android:onClick="coach_sign_up"
        android:textColor="@color/Pantone_Coated_2572_C"
        android:background="@drawable/background" />

</LinearLayout>