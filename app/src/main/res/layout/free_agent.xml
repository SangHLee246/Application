<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#8F5CFF">

    <TextView
        android:text="@string/free_agent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/free_agent"
        android:layout_weight="0.00"/>

    <EditText android:id="@+id/university_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/university_class" />

    <EditText android:id="@+id/major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/major" />

    <EditText android:id="@+id/minor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/minor" />

    <EditText android:id="@+id/skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/skills" />

    <EditText android:id="@+id/interests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/interests" />

    <EditText android:id="@+id/about_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/about_me"/>

    <EditText android:id="@+id/picture_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/picture_upload" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:onClick="search_preferences"/>
</LinearLayout>