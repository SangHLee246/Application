<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#645A95">

    <Button
        android:text="@string/begin_scouting"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/begin_scouting"
        android:onClick="swipe_deck"
        android:textColor="@color/Pantone_Coated_2572_C"
        android:background="@drawable/background" />

    <TextView
        android:text="@string/company_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="171dp"
        app:srcCompat="@drawable/food"
        android:id="@+id/imageView2" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/profile_icon"
            android:id="@+id/imageButton10"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/background" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/message_icon"
            android:id="@+id/imageButton2"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/background"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/sym_action_call"
            android:id="@+id/imageButton9"
            android:layout_row="0"
            android:layout_column="4"
            android:background="@drawable/background" />

        <ImageButton
            android:layout_width="185dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/settings_icon"
            android:id="@+id/imageButton11"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/background"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/search_icon"
            android:id="@+id/imageButton6"
            android:layout_row="1"
            android:layout_column="4"
            android:onClick="search_preferences"
            android:background="@drawable/background"
            android:scaleType="fitCenter" />

    </GridLayout>

</LinearLayout>